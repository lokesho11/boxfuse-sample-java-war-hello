pipeline {
    agent any

    stages {
        stage("GIT checkout") {
            steps {
                git 'https://github.com/lokesho11/boxfuse-sample-java-war-hello.git'
            }
        }
        
        stage("build") {
            steps {
                sh "mvn clean package"
                sh "mv target/*.war target/boxfuse-sample-java-war-hello.war"
            }
        }
        
        stage("deploy") {
            steps {
                script {
                    sshagent(['NewTomcat']) {
                  sh ' scp -o StringHostKeyChecking-no target/boxfuse-sample-java-war-hello.war ubuntu@3.110.106.240:/home/ubuntu/apache-tomcat-9.0.89/webapps/
'
                       
                    }
                }
            }
        }
    }
    
    post {
        success {
            echo 'Deployment successful!'
        }
        failure {
            echo 'Deployment failed. Check logs and server settings.'
        }
    }
}
